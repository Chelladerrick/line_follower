// Run forward for 3 seconds

// Stop for 1 second

// Run reverse for 3 seconds

// Stop permanently



// Speed control pins (PWM)
const int enA = 9;   // For Motor A (Motors 1 & 2)
const int enB = 10;  // For Motor B (Motors 3 & 4)

// Direction control pins
const int in1 = 6;
const int in2 = 7;
const int in3 = 8;
const int in4 = 11;

const int motorSpeed = 200;  // PWM 0â€“255

void setup() {
  pinMode(enA, OUTPUT);
  pinMode(enB, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);
  pinMode(in3, OUTPUT);
  pinMode(in4, OUTPUT);

  // Apply PWM speed
  analogWrite(enA, motorSpeed);
  analogWrite(enB, motorSpeed);

  // Run forward
  digitalWrite(in1, HIGH);
  digitalWrite(in2, LOW);
  digitalWrite(in3, HIGH);
  digitalWrite(in4, LOW);
  delay(3000); // forward for 3 sec

  // Stop
  stopMotors();
  delay(1000);

  // Run reverse
  digitalWrite(in1, LOW);
  digitalWrite(in2, HIGH);
  digitalWrite(in3, LOW);
  digitalWrite(in4, HIGH);
  delay(3000); // reverse for 3 sec

  // Final stop
  stopMotors();
}

void loop() {
  // Nothing here so it won't repeat
}

void stopMotors() {
  digitalWrite(in1, LOW);
  digitalWrite(in2, LOW);
  digitalWrite(in3, LOW);
  digitalWrite(in4, LOW);
}
